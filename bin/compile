#!/usr/bin/env ruby

Dir.chdir(ARGV[0])
system "pwd"
system "./compiletex #{ARGV[0]} #{ARGV[1]}"


# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])#0->build dir & 1->cache dir?
  pack.log("compile") do
    pack.compile
  end
end